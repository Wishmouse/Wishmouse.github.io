// Setting the length of track
function setTrackLength() {
trackLength = document.trackLength.value;{
for(i=1; i<=setTrackLength;i++){
  $("#playerOne_strip").append("<td>");
  $("#playerTwo_strip").append("<td>");
  $("#playerThree_strip").append("<td>");
  $("#playerFour_strip").append("<td>");
}
}               
