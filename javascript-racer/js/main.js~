 //event listener - key press.

 

//moving players class=active

 actionPlayer = function (player){
   var activeCell = $("#" + player + "td.active");
   var moveCell = activeCell.next();
   
   activeCell.removeClass("active");
   moveCell.addClass ("active");
   };
// moving var playerOne

function movePlayer(event) {
if (event.keyCode === playerOne){
  if(.playerOne<trackLength;);{
    actionPlayer('playerOne_strip');
    playerOneMove++;
  }
}
  
  
